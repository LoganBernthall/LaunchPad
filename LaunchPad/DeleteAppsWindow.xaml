<Window x:Class="LaunchPad.DeleteAppsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaunchPad"
        Icon="Assets/RocketFaviconConverted.ico"
        mc:Ignorable="d"
        Title="Delete Apps From LaunchPad" Height="200" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFBAB6B6">
        <Label Content="Delete application from LaunchPad:" HorizontalAlignment="Left" Height="27" Margin="10,10,0,0" VerticalAlignment="Top" Width="221" FontFamily="Yu Gothic Medium"/>
        <Button x:Name="BtnDeleteFromLP" Content="Delete From LaunchPad" HorizontalAlignment="Left" Height="41" Margin="307,92,0,0" VerticalAlignment="Top" Width="168" Background="#FFC2B8B8" Click="BtnDeleteFromLP_Click" FontFamily="Yu Gothic Medium"/>
        <ListBox x:Name="ListViewAppsToDel" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,39,269,10" Background="#FFBAB6B6"/>

    </Grid>
</Window>
